<%= form_with(model: [@drum_session, Comment.new], id: "new_comment_form", local: false, class: "space-y-4") do |form| %>
    <%= form.text_area :content, placeholder: "Share your thoughts...", class: "w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none", rows: 4 %>
    <%= form.submit "Send Comment", class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg transition-colors duration-200 ease-in-out" %>
  <% end %>