<% content_for :hide_navbar, true %>

<div class="container mx-auto px-4 py-8 max-w-2xl">
  <h1 class="text-4xl font-bold mb-6 text-center"><%= t('qr_code.title') %></h1>
  
  <div class="bg-white shadow-md rounded-lg p-8 mb-8">
    <div class="qr-code w-64 h-64 mx-auto mb-6">
      <%= qr_code_as_svg(@qr_code_url, use_path: true) %>
    </div>
    <p class="text-xl text-center mb-4"><%= t('qr_code.scan_instruction') %></p>
    <p class="text-gray-600 text-center"><%= t('qr_code.description') %></p>
  </div>

  <div class="text-center no-print">
    <button onclick="window.print()" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded transition duration-300">
      <%= t('qr_code.print_button') %>
    </button>
  </div>
</div>

<style>
  .qr-code svg {
    width: 100%;
    height: 100%;
  }
</style>

<style media="print">
  @page {
    size: auto;
    margin: 0mm;
  }

  body {
    padding: 40px;
  }

  .container {
    max-width: 100% !important;
  }

  button {
    display: none !important;
  }
</style>