<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">Drumming Session #<%= @drum_session.id %></h1>
    <div class="text-lg">
      Status: <span class="font-semibold <%= @drum_session.active? ? 'text-green-600' : 'text-red-600' %>">
        <%= @drum_session.active? ? 'Active' : 'Ended' %>
      </span>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <div>
      <% if @drum_session.active? %>
        <%= button_to "End Session", drum_session_path(@drum_session), method: :patch, class: "w-full bg-red-500 hover:bg-red-700 text-white font-bold py-3 px-4 rounded transition duration-300 mb-6" %>
      <% end %>
      <%= link_to "View & Print QR Code", qr_code_path, class: "block w-full text-center bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded transition duration-300" %>
    </div>

    <div>
      <div class="bg-white shadow-md rounded-lg p-6 mb-6">
        <h2 class="text-2xl font-bold mb-4">Reactions</h2>
        <%= turbo_stream_from [@drum_session, :reactions] %>
        <%= render "reactions/stats", reactions: @reactions %>
      </div>

      <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-2xl font-bold mb-4">Recent Comments</h2>
        <%= turbo_stream_from [@drum_session, :comments] %>
        <div id="comments" class="space-y-4">
          <%= render @comments %>
        </div>
      </div>
    </div>
  </div>
</div>