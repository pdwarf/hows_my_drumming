<h1 class="text-2xl font-bold mb-4">Your Drumming Sessions</h1>

<%= link_to "Start New Session", new_drum_session_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>

<div class="mt-4">
  <% @drum_sessions.each do |drum_session| %>
    <div class="border p-4 mb-2 <%= drum_session.active? ? 'bg-green-100' : 'bg-gray-100' %>">
      Session #<%= drum_session.id %> - 
      <%= drum_session.active? ? 'Active' : 'Ended' %>
      <%= link_to "View", drum_session_path(drum_session), class: "text-blue-500 hover:text-blue-700" %>
    </div>
  <% end %>
</div>
