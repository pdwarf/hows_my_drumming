<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col sm:flex-row justify-between items-center mb-6">
    <h1 class="text-2xl sm:text-3xl font-bold mb-4 sm:mb-0">Your Drumming Sessions</h1>
    <%= link_to "Start New Session", new_drum_session_path, class: "w-full sm:w-auto bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-300 text-center" %>
  </div>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <ul class="divide-y divide-gray-200">
      <% @drum_sessions.order(created_at: :desc).each do |drum_session| %>
        <li class="hover:bg-gray-50">
          <%= link_to drum_session_path(drum_session), class: "block p-4" do %>
            <div class="flex flex-row items-center sm:flex-row justify-between items-start sm:items-center">
              <div class="mb-2 sm:mb-0">
                <p class="text-sm font-medium text-gray-900">
                  <%= drum_session.created_at.strftime("%b %d, %Y") %>
                </p>
                <p class="text-xs text-gray-500">
                  Session #<%= drum_session.id %>
                </p>
              </div>
              <div class="flex flex-wrap items-center gap-2 text-xs">
                <span class="text-gray-500">
                  <%= drum_session.reactions.count %> ğŸ‘
                </span>
                <span class="text-gray-500">
                  <%= drum_session.comments.count %> ğŸ’¬
                </span>
                <span class="px-2 py-1 rounded-full <%= drum_session.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                  <%= drum_session.active? ? 'Active' : 'Ended' %>
                </span>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>